<h1>Log in</h1>

<%= form_for(:session, url: login_path) do |f| %>

    <div class="form_item">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>

    <div class="form_item">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <div class="form_item">
      <%= f.submit "Log in" %>
    </div>

<% end %>

<p>New user? <%= link_to "Sign up now!", new_user_path %></p>
